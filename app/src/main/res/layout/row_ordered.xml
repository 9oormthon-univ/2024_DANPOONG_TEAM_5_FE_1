<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/textView_menu_name"
        style="@style/body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴명"
        android:textColor="@color/gray_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_menu_amount"
        style="@style/Label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수량 0개"
        android:textColor="@color/gray_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_menu_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_menu_name" />

    <TextView
        android:id="@+id/textView_menu_price"
        style="@style/Label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textColor="@color/gray_30"
        app:layout_constraintBottom_toBottomOf="@+id/textView_menu_amount"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>